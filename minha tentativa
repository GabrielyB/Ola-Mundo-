nome = input("qual o seu nome? ")
print("Olá", nome)

idade = input("Qual a sua idade?")

if int(idade) > 18:
   print("Parabéns, você é um adulto")
   dirige = input("Você possui habilitação para dirigir? (S/N)")   

   if dirige == "S": 
      print("Parabéns")
   else:
      print("É uma pena, não dirija sem habilitação")


else:
   estudar = int("Você estuda?")
   if estudar == "S":
      print("continue assim")

   else:
      print("Se você ainda nao os terminou, volte a estudar")

exterior = input("Você já morou ou mora fora do brasil?")
if exterior == "S":
   print("Que legal que você tenha tido essa oportunidade")
      
else:
   print("A maioria dos brasileiros nunca morou fora mesmo, não fique triste") 
